<div class="row">
  <div class="col-xs-12">
    <% @posts.each do |post| %>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <%= image_tag "#{post.post_image_url}", class:"blog-img" %>
      <%= link_to post.title, post_path(post), class:"ellipsis-1 blog-title", style:"padding-bottom:0px;" %>
      <div class="just-flex">
        <div class="">
          <a href"#"><i class="fa fa-heart-o font-20" aria-hidden="true"></i></a>
          <p class="font-20" style="display:inline"><%= post.post_rating %></p>
        </div>
        <a href"#"><i class="fa fa-bookmark-o font-20" aria-hidden="true"></i></a>
      </div>
      <div class="just-flex">
        <%= link_to post.user.full_name %>
        <%= post.created_at.strftime("%B %d %Y")  %>
      </div>
      <br>
    </div>

    <% end %>
  </div>
</div>


