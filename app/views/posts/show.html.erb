                <% if @comment.errors.any? %>
                  <ul>
                    <% @comment.errors.full_messages.each do |msg| %>
                      <li><%= msg %><li>
                    <% end %>
                  </ul>
                <% end %>

                <%= form_for [@post, @comment] do |f| %>
                  <div class="form-group col-10">

                    <%= f.text_area :body, class: 'col-form form-control' %>
                  </div>
